<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/nearestStationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/staticNearestStationTitle"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:background="@drawable/titlebg"
            android:paddingLeft="10sp"
            android:text="This is nearest station"
            android:textColor="@color/def_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/staticNearestStationTitle"
            android:text="Tumwater SW"
            android:textColor="@color/def_agweathernet"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtviewTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtviewName"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/txtviewName"
            android:text="76.74 (°F)"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgviewStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtviewName"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:src="@drawable/def_station" />

        <LinearLayout
            android:id="@+id/nearestStationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtviewName"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_toRightOf="@+id/imgviewStation"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtviewHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity:	59.04 (%)"
                android:textColor="@color/defaultcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtviewWind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind:	5.74 (mph) W"
                android:textColor="@color/defaultcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtviewDewpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dewpoint:	60.45 (°F)"
                android:textColor="@color/defaultcolor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtviewRain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today rain: 0 (in)"
                android:textColor="@color/defaultcolor"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nearestStationView"
        android:layout_marginTop="10sp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/staticNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="15sp"
            android:background="@drawable/titlebg"
            android:paddingLeft="10sp"
            android:text="Here is the breaking news"
            android:textColor="@color/def_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtviewWwefwefind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Wind:	5.74 (mph) W"
            android:textColor="@color/defaultcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtviewDewpowefwefnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Dewpoint:	60.45 (°F)"
            android:textColor="@color/defaultcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtviewRawefwefin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Today rain: 0 (in)"
            android:textColor="@color/defaultcolor"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logotext"
        android:src="@drawable/wsu_logontext" />

</RelativeLayout>